{
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "--capture=tee-sys",
    "-vv",
    "--rootdir",
    "${workspaceFolder}/tests",
    "-m",
    "not (slow or gui)"
  ],
  "files.exclude": {
    "**/__pycache__/": true,
    "**/.mypy_cache/": true,
    "**/.pytest_cache/": true,
    "**/.tox/": true,
    "**/*.egg-info": true,
    "**/*.py[cod]": true,
    "**/*.ruff_cache/": true,
    "**/*.venv/": true,
    "**/dist/": true,
    "**/doc/html/": true,
    "**/docs/_build/": true,
    "**/MANIFEST": true
  }
}
